<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="chatView" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ihmTable.controller.ChatController">
   <center>
      <BorderPane fx:id="chatLeftContainer" BorderPane.alignment="CENTER">
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
               <content>
                  <ListView fx:id="listMessages" />
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <HBox fx:id="messageControlContainer" BorderPane.alignment="CENTER">
               <children>
                  <TextArea fx:id="messageArea" />
                  <Button fx:id="sendButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false" text="Envoyer" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </center>
   <right>
      <AnchorPane fx:id="chatRightContainer">
         <children>
            <ListView fx:id="listUsers" prefHeight="442.0" prefWidth="248.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </right>
   <top>
      <Label fx:id="chatTitle" maxWidth="1.7976931348623157E308" text="Chat" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>

<HBox alignment="CENTER" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ihmTable.controller.PlayerController">
   <children>
      <VBox>
         <children>
            <Label fx:id="tokens" prefHeight="60.0" prefWidth="60.0" text="21" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets left="13.0" />
               </padding>
            </Label>
            <Label fx:id="lostScore" prefHeight="60.0" prefWidth="60.0" text="21" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets left="13.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" fillWidth="false">
         <children>
            <Circle fx:id="avatarContainer" fill="WHITE" radius="40.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0" />
            <Text fx:id="playerName" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="27.6708984375" />

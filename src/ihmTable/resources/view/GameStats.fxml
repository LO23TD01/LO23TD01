            <Label fx:id="scoreToBeatPlayer" maxHeight="1.7976931348623157E308" styleClass="score-to-beat" text="Unknown" />
         </children>
         <styleClass>
            <String fx:value="row" />
            <String fx:value="alt" />
         </styleClass>
      </HBox>
      <HBox styleClass="row">
         <children>
            <Label maxHeight="1.7976931348623157E308" text="Jetons en jeu : " />
            <Label fx:id="turnChips" maxHeight="1.7976931348623157E308" text="0" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Label maxHeight="1.7976931348623157E308" text="Jetons restants :" />
